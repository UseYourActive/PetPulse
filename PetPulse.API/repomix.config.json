{
  "output": {
    "filePath": "petpulse_context.xml",
    "style": "xml",
    "removeComments": false,
    "removeEmptyLines": true,
    "topChars": 0
  },
  "ignore": {
    "useGitignore": true,
    "customPatterns": [
      "**/bin/**",
      "**/obj/**",
      "**/.vs/**",
      "**/.idea/**",
      "**/Properties/**",
      "**/Connected Services/**",
      "**/Migrations/**",
      "**/*.http",
      "**/*.user",
      "**/*.suo",
      "**/*.dll",
      "**/*.exe",
      "**/*.pdb"
    ]
  },
  "include": [
    "**/*.cs",
    "**/Dockerfile",
    "**/docker-compose.yml",
    "**/appsettings.json"
  ]
}